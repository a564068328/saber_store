<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/live_sdk_white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/live_sdk_sl_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/live_sdk_ll_choice_gift_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#5ab2f5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择礼物数量"
                    android:textColor="@color/live_sdk_white"
                    android:textSize="@dimen/live_sdk_text_size_15" />

                <TextView
                    android:id="@+id/live_sdk_txt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/live_sdk_txt_count_bg"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="#464646"
                    android:textSize="@dimen/live_sdk_text_size_15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/live_sdk_btn_give_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/live_sdk_btn_give_gift_bg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/live_sdk_ll_choice_what_gift"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#5ab2f5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择座驾"
                    android:textColor="@color/live_sdk_white"
                    android:textSize="@dimen/live_sdk_text_size_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/live_sdk_txt_count_bg"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:textColor="#464646"
                    android:textSize="@dimen/live_sdk_text_size_15"
                    android:visibility="invisible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/live_sdk_btn_buy_car_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/live_sdk_btn_buy_gift_bg"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/live_sdk_ll_choice_what_car_togo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#5ab2f5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择出场座驾"
                    android:textColor="@color/live_sdk_white"
                    android:textSize="@dimen/live_sdk_text_size_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/live_sdk_txt_count_bg"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:textColor="#464646"
                    android:textSize="@dimen/live_sdk_text_size_15"
                    android:visibility="invisible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/live_sdk_btn_buy_gift_bg"
                    android:visibility="invisible" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/live_sdk_ll_choice_what_property_to_buy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#5ab2f5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择购买道具"
                    android:textColor="@color/live_sdk_white"
                    android:textSize="@dimen/live_sdk_text_size_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/live_sdk_txt_count_bg"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:textColor="#464646"
                    android:textSize="@dimen/live_sdk_text_size_15"
                    android:visibility="invisible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/live_sdk_btn_buy_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/live_sdk_btn_buy_gift_bg"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/live_sdk_ll_choice_what_property_to_use"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#5ab2f5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择使用道具"
                    android:textColor="@color/live_sdk_white"
                    android:textSize="@dimen/live_sdk_text_size_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/live_sdk_txt_count_bg"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:textColor="#464646"
                    android:textSize="@dimen/live_sdk_text_size_15"
                    android:visibility="invisible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/live_sdk_btn_use_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/live_sdk_btn_use_property_bg"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/live_sdk_ll_check_gift"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/live_sdk_btn_check_gift"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#ebeced"
                        android:gravity="center"
                        android:text="礼物"
                        android:textColor="@color/live_sdk_blue1"
                        android:textSize="@dimen/live_sdk_text_size_12" />

                    <TextView
                        android:id="@+id/live_sdk_tv_check_gift"
                        android:layout_width="fill_parent"
                        android:layout_height="4dp"
                        android:background="@color/live_sdk_blue1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/live_sdk_ll_check_car_gift"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/live_sdk_btn_check_car"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#ebeced"
                        android:gravity="center"
                        android:text="座驾"
                        android:textColor="@color/live_sdk_gray"
                        android:textSize="@dimen/live_sdk_text_size_12" />

                    <TextView
                        android:id="@+id/live_sdk_tv_check_car"
                        android:layout_width="fill_parent"
                        android:layout_height="4dp"
                        android:background="@color/live_sdk_blue1"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/live_sdk_ll_my_car"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/live_sdk_btn_check_mycar"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#ebeced"
                        android:gravity="center"
                        android:text="我的座驾"
                        android:textColor="@color/live_sdk_gray"
                        android:textSize="@dimen/live_sdk_text_size_12" />

                    <TextView
                        android:id="@+id/live_sdk_tv_check_mycar"
                        android:layout_width="fill_parent"
                        android:layout_height="4dp"
                        android:background="@color/live_sdk_blue1"
                        android:visibility="invisible" />
                </LinearLayout>
               
                
            </LinearLayout>

            <com.yunva.live.sdk.ui.channel.widgt.ScrollLayout
                android:id="@+id/live_sdk_scrollLayout"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:layout_margin="10dp" />

            <com.yunva.live.sdk.ui.channel.widgt.PageControlView
                android:id="@+id/live_sdk_pageControl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="bottom|center" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/live_sdk_txt_balance1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的豆芽: "
                            android:textColor="@color/live_sdk_black" />

                        <TextView
                            android:id="@+id/live_sdk_txt_balance1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="#ffe73737" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/live_sdk_txt_balance2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的金币: "
                            android:textColor="@color/live_sdk_black" />

                        <TextView
                            android:id="@+id/live_sdk_txt_balance2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="#ffe73737" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_red_bg"
                    android:padding="10dp"
                    android:text="充点小钱玩玩"
                    android:textColor="@color/live_sdk_white"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>