<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/led_page"
        android:layout_width="match_parent"
        android:layout_height="192dp" />

    <com.icloud.listenbook.base.view.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/led_page"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp" />

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/led_page"
        android:background="#fff8fbfb"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/medium_type_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/ico_medium_type"
            android:gravity="center"
            android:text="@string/medium_type"
            android:textColor="@color/greyblack"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <TextView
            android:id="@+id/ranking_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/ico_ranking"
            android:gravity="center"
            android:text="@string/ranking"
            android:textColor="@color/greyblack"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <TextView
            android:id="@+id/gongguo_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/foxiang"
            android:gravity="center"
            android:text="@string/gongguo"
            android:textColor="@color/greyblack"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/msg_tip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/icon_msg_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_msg_red" />

            <TextView
                android:id="@+id/msgSizeTxt"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignRight="@+id/icon_msg_red"
                android:layout_alignTop="@+id/icon_msg_red"
                android:layout_marginRight="10dp"
                android:background="@drawable/num_red_bg"
                android:gravity="center"
                android:maxLength="1"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawablePadding="1dp"
                android:gravity="center"
                android:text="@string/chatroom"
                android:textColor="@color/greyblack"
                android:textSize="18sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <TextView
            android:id="@+id/teach_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/icon_teach"
            android:gravity="center"
            android:text="@string/teach"
            android:textColor="@color/greyblack"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item"
        android:layout_margin="6dp"
        android:background="#fff8fbfb"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今\n日\n推\n荐"
            android:textColor="@color/orange"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:background="@color/line" />

        <com.icloud.listenbook.base.view.DraggableGridViewPager
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/info"
            android:layout_width="17dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:src="@drawable/icon_item_left" />
    </LinearLayout>

</RelativeLayout>