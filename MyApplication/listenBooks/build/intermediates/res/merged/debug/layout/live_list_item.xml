<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/iv_room_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/default_room_icon"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
 		android:background="#7F000000">
        <TextView 
            android:id="@+id/txt_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/live_sdk_white"
            android:textSize="@dimen/live_sdk_text_size_10"
            android:singleLine="true"
            android:text="房间名称"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/txt_room_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/live_sdk_white"
            android:textSize="@dimen/live_sdk_text_size_10"
            android:text="ID: 1000"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/txt_room_people_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/live_sdk_red1"
            android:textSize="@dimen/live_sdk_text_size_10"
            android:drawableLeft="@drawable/room_people_icon"
            android:drawablePadding="3dp"
            android:singleLine="true"
            android:visibility="gone"
            android:text="1000"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

</RelativeLayout>
