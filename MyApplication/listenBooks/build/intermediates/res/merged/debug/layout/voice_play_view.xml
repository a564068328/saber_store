<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chapter_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_l"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="#fff8fbfb"
        android:orientation="vertical" >

        <View
            android:layout_width="2dp"
            android:layout_height="13dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/icon_left_line" />

        <TextView
            android:id="@+id/chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:textColor="@color/item_title"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/anthology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/all_down"
            android:drawableLeft="@drawable/icon_anthology"
            android:drawablePadding="6dp"
            android:text="选集"
            android:textColor="@color/item_title"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/all_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/icon_down"
            android:drawablePadding="6dp"
            android:text="批量下载"
            android:textColor="@color/item_title"
            android:textSize="13sp"
            android:visibility="gone" />

        <View
            android:id="@+id/line_down"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/chapter"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/fineline" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chapter_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line_down"
            android:scrollbars="none" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_l"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#fff8fbfb" >

        <TextView
            android:id="@+id/play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/play_pos"
            android:layout_marginLeft="6dp"
            android:text="00:00"
            android:textColor="@color/item_title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sum_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/play_time"
            android:layout_marginRight="6dp"
            android:text="00:00"
            android:textColor="@color/item_title"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/play_pos"
            style="@style/Voice.SeekBar.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/music_play"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp" />

        <ImageView
            android:id="@+id/music_share"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/music_play"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/icon_music_share"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/music_up"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignTop="@+id/music_play"
            android:layout_marginRight="40dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/music_play"
            android:background="@drawable/icon_music_up" />

        <ImageView
            android:id="@+id/music_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/icon_music_play" />

        <ImageView
            android:id="@+id/music_down"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignTop="@+id/music_play"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/music_play"
            android:background="@drawable/icon_music_down" />

        <ImageView
            android:id="@+id/music_like"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/music_play"
            android:layout_marginRight="18dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/icon_music_like"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>