<com.icloud.listenbook.ui.custom.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dsl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_blue2_bg" >

    <LinearLayout
        android:id="@+id/left_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="101dp" >

            <com.android.volley.toolbox.CircleNetworkImageView
                android:id="@+id/userIcon"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/loginTxt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/userIcon"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/userIcon"
                android:background="@drawable/txt_box"
                android:gravity="center"
                android:text="登陆"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/userIcon"
                android:drawablePadding="4dp"
                android:text="name"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userName"
                android:layout_below="@+id/userName"
                android:layout_marginLeft="2dp"
                android:text="签名"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/time_of_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userName"
                android:layout_below="@+id/signature"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#7fff" />

        <RelativeLayout
            android:id="@+id/online_l"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_transparent_re"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/onlineIco"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/onlineIco"
                android:text="查看在线人员"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gongguo_l"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_transparent_re"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/gongguoIco"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/gongguoIco"
                android:text="每日功过"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/feedback_l"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_transparent_re"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/feedbackIco"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/feedbackIco"
                android:text="意见反馈"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#7fff" />

        <RelativeLayout
            android:id="@+id/msgremind_l"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_transparent_re"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/msgremindIco"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/msgremindIco"
                android:text="设置新消息提醒"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/textsize_l"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_transparent_re"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/textsizeIco"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/textsizeIco"
                android:text="设置聊天字体大小"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/textbubble_l"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_transparent_re"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/textbubbleIco"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/textbubbleIco"
                android:text="设置聊天气泡"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#7fff" />

        <RelativeLayout
            android:id="@+id/del_l"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_transparent_re"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/delIco"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/delIco"
                android:text="清空聊天室记录"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/exit_l"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_transparent_re"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/exitIco"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/exitIco"
                android:text="退出聊天室"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <com.icloud.listenbook.ui.custom.MyLinearLayout
        android:id="@+id/mll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tab_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/top_l"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/title_top_l" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ico_medium_type"
                />

            <TextView
                android:id="@+id/name"
                style="@style/base_title"
                android:layout_centerInParent="true"
                android:text="聊天室" />

            <!--
                <TextView
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="清空"
                android:textColor="@color/orange" />
            -->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tip_news"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tip_news"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/msg_add_tip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="24dp"
                android:text="有X条新消息"
                android:textColor="@color/orange"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_tip_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >
                </TextView>

                <ProgressBar
                    android:id="@+id/pb_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:indeterminateDrawable="@drawable/custom_progress" />

                <!-- android:background="@drawable/textview_edge" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="正在拼命加载中。。。"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >
                </TextView>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <com.handmark.pulltorefresh.library.PullToRefreshListView
                xmlns:ptr="http://schemas.android.com/apk/res-auto"
                android:id="@+id/my_fresh_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@android:color/transparent"
                android:dividerHeight="2dp"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="true"
                android:headerDividersEnabled="false"
                android:listSelector="@android:color/transparent"
                ptr:ptrHeaderTextColor="@color/black"
                ptr:ptrMode="both" />

            <TextView
                android:id="@+id/tip_num"
                android:layout_width="98dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/msg_add_tip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="24dp"
                android:text="有X条新消息"
                android:textColor="@color/orange"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/title_top_l"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/emojicon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:src="@drawable/emoj_icon" />

            <com.rockerhieu.emojicon.EmojiconEditText
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="left"
                android:background="@drawable/edit_msg"
                android:maxLength="100"
                android:paddingTop="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/thingrey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:enabled="false"
                android:text="发送"
                android:textColor="@color/state_select_submit_txt"
                android:textSize="18sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/emojicons"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:visibility="gone" />
    </com.icloud.listenbook.ui.custom.MyLinearLayout>

</com.icloud.listenbook.ui.custom.DragLayout>