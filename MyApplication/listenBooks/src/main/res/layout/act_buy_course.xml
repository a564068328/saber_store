<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg" >

    <RelativeLayout
        android:id="@+id/top_l"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_top_l" >

        <ImageView
            android:id="@+id/back"
            style="@style/base_back" />

        <TextView
            android:id="@+id/titleTxt"
            style="@style/base_title"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/top_l"
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/thingrey"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/zero_datas"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_below="@+id/top_l"
        android:background="#fff"
        android:visibility="invisible" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/icon"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon"
            android:layout_margin="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/icon"
            android:text="标题"
            android:textColor="#a000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_buydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="8dp"
            android:text="购买日期" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_buydate"
            android:layout_marginTop="10dp"
            android:text="￥38" />

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_margin="4dp"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="#fff"
            android:textSize="15sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#fff"
        android:orientation="vertical"
        android:visibility="visible" >

        <com.icloud.listenbook.ui.custom.CustomProgressBar
            style="@style/mycustomprocessbar"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="努力加载中,请稍候"
            android:textColor="@color/gray" />
    </LinearLayout>

</RelativeLayout>