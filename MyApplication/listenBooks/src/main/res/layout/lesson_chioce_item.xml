<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.icloud.listenbook"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="#FFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="选择题部分（可多选）"
            android:textColor="@color/txt_blue"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/line" />

        <com.icloud.listenbook.unit.JustifyTextView
            android:id="@+id/issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/ll_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/tv_user_chioce_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户答案"
            android:textColor="#000"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_chioce_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正确答案"
            android:textColor="#000"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</android.support.v7.widget.CardView>