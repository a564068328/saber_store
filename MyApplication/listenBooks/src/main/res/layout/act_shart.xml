<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_l"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_top_l" >

        <ImageView
            android:id="@+id/back"
            style="@style/base_back" />

        <TextView
            android:id="@+id/title"
            style="@style/base_title"
            android:layout_centerInParent="true"
            android:text="@string/recommended" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp" >

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_feedback"
            android:gravity="left"
            android:padding="4dp"
            android:textColorHint="#ffB0B4BB"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rewardRL"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone" >

            <EditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/exchange"
                android:background="@drawable/edit_feedback"
                android:gravity="left|center_vertical"
                android:hint="输入好友兑换码"
                android:maxLength="12"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:textColorHint="#ffB0B4BB"
                android:textSize="16sp" />

            <Button
                android:id="@+id/exchange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/state_select_submit_btn"
                android:enabled="false"
                android:gravity="center"
                android:text="兑换"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/orange_tab"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/copy"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/green"
            android:gravity="center"
            android:padding="8dp"
            android:text="答谢好友"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@drawable/orange_tab"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/recommended"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>