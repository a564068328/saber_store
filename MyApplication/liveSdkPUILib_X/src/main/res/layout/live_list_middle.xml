<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_live_ranklist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/live_sdk_main_bg"
    android:gravity="center"
    android:padding="3dp"
    android:baselineAligned="false"
    android:orientation="horizontal" >
	<LinearLayout 
	    android:id="@+id/layout_live_charmlist"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="3dp"
	    android:gravity="center"
	    android:background="@drawable/btn_charmlist_bg"
	    android:orientation="horizontal">
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="4dp"
	        android:src="@drawable/live_charm"/>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:layout_marginTop="8dp"
	    	android:layout_marginBottom="8dp"
	        android:text="女神榜" 
	        android:textColor="@color/live_sdk_white"
	        android:textSize="@dimen/live_sdk_text_size_15"/>
    </LinearLayout>

    <LinearLayout
	    android:id="@+id/layout_live_richlist" 
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="3dp"
	    android:gravity="center"
	    android:background="@drawable/btn_ranklist_bg"
	    android:orientation="horizontal">
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="4dp"
	        android:src="@drawable/live_rich"/>
	 	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:layout_marginTop="8dp"
	    	android:layout_marginBottom="8dp"
	        android:text="富豪榜" 
	        android:textColor="@color/live_sdk_white"
	        android:textSize="@dimen/live_sdk_text_size_15"/>
    </LinearLayout> 
</LinearLayout>
