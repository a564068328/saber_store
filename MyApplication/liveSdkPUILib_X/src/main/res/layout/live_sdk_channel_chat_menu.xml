<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/menu_close_voice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#e5000000"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:padding="15dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_close_voice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="关闭声音"
                    android:textColor="@color/live_sdk_white"
                    android:textSize="@dimen/live_sdk_text_size_15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_open_voice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#e5000000"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_open_voice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="开启声音"
                    android:textColor="@color/live_sdk_white"
                    android:textSize="@dimen/live_sdk_text_size_15" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/menu_line_ver" />

        <FrameLayout
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/menu_close_mv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#e5000000"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:padding="15dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_close_mv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="关闭视频"
                    android:textColor="@color/live_sdk_white"
                    android:textSize="@dimen/live_sdk_text_size_15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_open_mv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#e5000000"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_open_mv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="开启视频"
                    android:textColor="@color/live_sdk_white"
                    android:textSize="@dimen/live_sdk_text_size_15" />
            </LinearLayout>
        </FrameLayout>
        
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/menu_line_ver" />
       <LinearLayout
            android:id="@+id/menu_wealth_list"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e5000000"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical"
            android:padding="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/live_sdk_btn_ml_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="讲师榜"
                android:textColor="@color/live_sdk_white"
                android:textSize="@dimen/live_sdk_text_size_15" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/menu_line_hor" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/menu_help"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e5000000"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical"
            android:padding="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_help_d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="帮助"
                android:textColor="#40ffffff"
                android:textSize="@dimen/live_sdk_text_size_15" />
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/menu_line_ver" />

        <LinearLayout
            android:id="@+id/menu_modify_nickname"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e5000000"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical"
            android:padding="15dp" >
			<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_help_d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="帮助"
                android:textColor="#40ffffff"
                android:textSize="@dimen/live_sdk_text_size_15" />
            <!-- <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:src="@drawable/live_sdk_modify_nickname_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="修改昵称"
                android:visibility="visible"
                android:textColor="@color/live_sdk_white"
                android:textSize="@dimen/live_sdk_text_size_15" /> -->
        </LinearLayout>
        
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/menu_line_ver" />

        <LinearLayout
            android:id="@+id/menu_out"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e5000000"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical"
            android:padding="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_out" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="退出"
                android:textColor="@color/live_sdk_white"
                android:textSize="@dimen/live_sdk_text_size_15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>