<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_record_voice_state"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
	android:background="@drawable/talk_single_bg"
	android:layout_centerInParent="true" >
	
	<ProgressBar
        android:id="@+id/record_voice_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
	
	<LinearLayout
		android:id="@+id/layout_record_voice_xinhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/talk_sing_icon" />

            <ImageView
                android:id="@+id/iv_talk_single_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
				android:background="@drawable/xinhao_0" />
        </LinearLayout>

    <TextView
        android:id="@+id/txt_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60ç§’"
        android:textColor="@color/live_sdk_white"
        android:textSize="@dimen/live_sdk_text_size_13" />

</LinearLayout>