<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/double_button_dialog_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:padding="25dp"
        android:text="亲，您还没有下载该游戏，可以进入聊天大厅闲聊一下哦！"
        android:textColor="@color/live_sdk_black"
        android:textSize="@dimen/live_sdk_text_size_15" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/double_button_dialog_divider" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_dialog_default_bg"
        android:text="确定"
        android:textColor="@color/live_sdk_dialog_main_color"
        android:textSize="@dimen/live_sdk_text_size_15" />

</LinearLayout>