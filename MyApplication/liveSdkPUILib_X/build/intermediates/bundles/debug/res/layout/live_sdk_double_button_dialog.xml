<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/double_button_dialog_bg" >
    
    <TextView 
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="@dimen/live_sdk_text_size_15"
        android:textColor="@color/live_sdk_black"
        android:text="亲，您还没有下载该游戏，可以进入聊天大厅闲聊一下哦！"
        android:padding="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/double_button_dialog_divider"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textColor="@color/live_sdk_dialog_main_color"
            android:textSize="@dimen/live_sdk_text_size_15"
            android:background="@drawable/btn_dialog_default_bg"
            android:text="取消"
            />
        <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:background="@drawable/double_button_dialog_split_line"
	        />
        <Button 
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/live_sdk_dialog_main_color"
            android:textSize="@dimen/live_sdk_text_size_15"
            android:background="@drawable/btn_dialog_default_bg"
            android:text="前往"
            />
    </LinearLayout>

</LinearLayout>
