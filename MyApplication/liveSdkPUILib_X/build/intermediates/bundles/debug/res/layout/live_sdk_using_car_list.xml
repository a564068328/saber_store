<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="62dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/live_sdk_gift_item_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="62dp"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/live_sdk_iv_car_icon"
                android:layout_margin="1dp"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:src="@drawable/live_sdk_gift_default_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/live_sdk_txt_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="超级跑车"
            android:textColor="@color/live_sdk_black"
            android:textSize="@dimen/live_sdk_text_size_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/live_sdk_tv_car_usting_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:text="2015/5/1到期"
        android:textColor="@color/live_sdk_red" />

    <Button
        android:id="@+id/live_sdk_btn_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/live_sdk_btn_use_bg" />
    <Button
        android:id="@+id/live_sdk_btn_using"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/live_sdk_btn_using_bg"
        android:visibility="gone" />

</LinearLayout>