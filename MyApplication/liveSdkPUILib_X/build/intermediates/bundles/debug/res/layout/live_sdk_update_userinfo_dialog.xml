<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/double_button_dialog_bg" >
    
    <TextView 
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="@dimen/live_sdk_text_size_15"
        android:textColor="@color/live_sdk_black"
        android:text="请输入昵称"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        />
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_divider"
        />
    <EditText 
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/userinfo_edit_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:longClickable="false"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/live_sdk_black"
        android:textSize="@dimen/live_sdk_text_size_13"
        />
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/double_button_dialog_divider"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textColor="#1085ed"
            android:textSize="@dimen/live_sdk_text_size_15"
            android:background="@drawable/btn_dialog_default_bg"
            android:text="取消"
            />
        <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:background="@drawable/double_button_dialog_split_line"
	        />
        <Button 
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/live_sdk_dialog_main_color"
            android:textSize="@dimen/live_sdk_text_size_15"
            android:background="@drawable/btn_dialog_default_bg"
            android:text="确认"
            />
    </LinearLayout>

</LinearLayout>
