<?xml version="1.0" encoding="utf-8"?><LinearLayout     android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:orientation="horizontal"    android:gravity="center_vertical"    xmlns:android="http://schemas.android.com/apk/res/android">    <TextView         android:id="@+id/live_sdk_txt_count"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="@dimen/live_sdk_text_size_13"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:paddingTop="5dp"        android:paddingBottom="5dp"        android:textColor="#464646"/>    <TextView         android:id="@+id/live_sdk_txt_name"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="@dimen/live_sdk_text_size_13"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:paddingTop="5dp"        android:paddingBottom="5dp"        android:textColor="#464646"/></LinearLayout>